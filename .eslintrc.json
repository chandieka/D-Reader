{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "no-trailing-spaces": "error",
        "max-len": ["warn", { "code": 144 }],
        "import/no-absolute-path": "error",
        "no-else-return": "error",
        "wrap-iife": ["error", "inside"],
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "singleQuote": true,
                "printWidth": 144,
                "trailingComma": "es5",
                "endOfLine": "auto"
            }
        ],
        
        "comma-dangle": "off",
        "linebreak-style": "off",
        "no-param-reassign": "off",
        "no-inner-declarations": "off",
        "no-undef": "off",
        "import/extensions": "off",
        "no-restricted-globals": "off",
        "lines-between-class-members": "off",
        "padded-blocks": "off",
        "no-underscore-dangle": "off"
    }
}
